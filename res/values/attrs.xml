<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RippleView">
        <attr name="backgroundColor" format="reference|color" />
        
        <!-- Color of ripple animation -->
        <attr name="rippleColor" format="reference|color" />
        
        <!-- Whether zoom RippleView when it was clicked -->
        <attr name="zoom" format="boolean" />
        <attr name="clickAfterRipple" format="boolean" />
        <attr name="rippleAlpha" format="integer"/>
        <attr name="duration" format="integer"/>
        
        <!--  for button -->
        <attr name="disabledColor" format="reference|color" />
        <attr name="textColor" format="reference|color" />
        <attr name="textSize" format="reference|dimension" />
        <attr name="text" format="reference|string" />
        
    </declare-styleable>

    <declare-styleable name="CircleProgressBar"> 
        <!-- 弧宽 -->>
        <attr name="LineWidth" format="integer"/>
        <!-- 速度 -->
        <attr name="Speed" format="float"/>
        <!-- 弧度 -->
        <attr name="MaxRadian" format="integer"/>
        <attr name="MinRadian" format="integer"/>
        <!-- 颜色 -->
        <attr name="PaintColor" format="color"></attr>
        <!-- 是否使用圆头 -->
        <attr name="CapType" >
            <enum name="BUTT" value="0"/>
            <enum name="ROUND" value="1"/>
            <enum name="SQUARE" value="2"/>
        </attr>
        <!-- 设置偏移 -->
        <attr name="offAngle" format="integer"/>
        
    </declare-styleable>
    
</resources>