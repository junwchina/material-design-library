<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    
    <com.md.library.views.RippleView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:rippleColor="#999999"
        >
        <TextView android:id="@+id/btn" 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Text RippleView"
            android:gravity="center"
            android:textColor="#000000"/>
   	</com.md.library.views.RippleView>    
   	
    
    <com.md.library.views.FlatButton android:id="@+id/flat_button"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:text="Flat Button"
        app:textColor="#2196F3" /> 
    
     <com.md.library.views.RaisedButton android:id="@+id/raised_button"
        android:layout_width="wrap_content" 
        android:layout_height="48dp"
        android:background="#2196F3"
        app:textSize="14sp"
        app:text="Raised Button"
        app:textColor="#ffffff" />
        
</LinearLayout>
